<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Cadastro_de_Especies.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">

            <Label
                x:Name="lblCodigo"/>
            <Entry
                x:Name="txtCodigo"
                Text="Codigo"/>
            <Label
                x:Name="lblNome"/>
            <Entry
                x:Name="txtNome"
                Text="Nome"/>

            <Button
                x:Name="btnInsert"
                Text="Inserir"
                Clicked="btnInsert_Clicked"/>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
